{
    "compilerOptions": {
        "jsx": "react",
        "module": "CommonJS",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "esnext",

        "resolveJsonModule": true,

        "strict": true,

        "esModuleInterop": true,

        "baseUrl": "src",
        "paths": {
            "src/*": ["./src/*"]
        },

        "plugins": [{"name": "typescript-plugin-css-modules"}]
    },
    "include": [
        "src/**/*",
        "src/types"
    ]
}